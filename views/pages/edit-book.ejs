<%- include('../partials/header', { title: 'Edit Book' }) %>

<div class="page-wrapper">

  <!-- Bread crumb -->
  <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Edit books Form</h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Edit</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">books Forms</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
  <!-- Container -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">

        <div class="card p-5">
          <div class="title mb-3">
            <h2>Edit Book</h2>
          </div>

          <form action="/update/<%= books._id %>" method="post" class="card p-4 w-50">
            
            <!-- Book Name -->
            <div class="mb-3">
              <label for="bookName" class="form-label">Book Name</label>
              <input type="text" id="bookName" name="bookName" 
                     value="<%= books.bookName %>" 
                     class="form-control" required />
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <input type="number" id="price" name="price" 
                     value="<%= books.price %>" 
                     class="form-control" min="0" step="0.01" required />
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea id="description" name="description" 
                        class="form-control" rows="3" required><%= books.description %></textarea>
            </div>

            <!-- Category -->
            <div class="mb-3">
              <label for="category" class="form-label">Category</label>
              <select id="category" name="category" class="form-control form-select" required>
                <% let categories = [
                  'Fantasy', 'Science Fiction', 'Historical', 'Realistic',
                  'Crime', 'Horror', 'Romance', 'Biography',
                  'Reference Book', 'Essay'
                ]; %>
                <% categories.forEach(cat => { %>
                  <option value="<%= cat %>" <%= books.category === cat ? 'selected' : '' %>>
                    <%= cat %>
                  </option>
                <% }) %>
              </select>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-success text-white">
              Update Book
            </button>
            
          </form>
        </div>

      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
